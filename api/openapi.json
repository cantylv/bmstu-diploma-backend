{
  "openapi": "3.0.3",
  "info": {
    "title": "Resto - Delivery Club",
    "description": "Сервис доставки еды из ресторанов \"Resto\" ",
    "version": "1.0.11"
  },
  "servers": [
    {
      "url": "https://petstore3.swagger.io/api/v3"
    }
  ],
  "tags": [
    {
      "name": "restaurants",
      "description": "Рестораны"
    },
    {
      "name": "user",
      "description": "Действия с пользователями"
    }
  ],
  "paths": {
    "/restaurants": {
      "get": {
        "tags": [
          "restaurants"
        ],
        "summary": "Возвращает список ресторанов",
        "description": "Список ресторанов с информацией о них",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Умный поиск по названию ресторана и его описанию",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Restaurant"
                }
              }
            }
          }
        }
      }
    },
    "/signup": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Регистрация",
        "description": "Регистрация пользователя в системе",
        "requestBody": {
          "description": "Данные пользователя для регистрации",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пользователь успешно зарегистрирован",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Были переданы некорректные данные для регистрации",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadCredentionals"
                }
              }
            }
          },
          "403": {
            "description": "Недостаточно прав для совершения действия",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadPermission"
                }
              }
            }
          }
        }
      }
    },
    "/signin": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Авторизация",
        "description": "Авторизация пользователя в системе",
        "requestBody": {
          "description": "Данные пользователя для авторизации",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пользователь успешно авторизован",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Пользователь предоставил неверные данные для входа в аккаунт",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadCredentionals"
                }
              }
            }
          },
          "403": {
            "description": "Недостаточно прав для совершения действия",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadPermission"
                }
              }
            }
          }
        }
      }
    },
    "/signout": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Деавторизация",
        "description": "Выход пользователя из системы. Данные доступны в режиме чтения",
        "requestBody": {
          "description": "Пустое тело ответа специально, поскольку данные передавать не надо",
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пользователь успешно деавторизован",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LogoutRequest"
                }
              }
            }
          },
          "403": {
            "description": "Недостаточно прав для совершения действия",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadPermission"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BadPermission": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string",
            "example": "Insufficient permissions to perform the action"
          }
        }
      },
      "BadCredentionals": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string",
            "example": "Bad credentials provided"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "password": {
            "type": "string",
            "example": 12345
          }
        }
      },
      "LogoutRequest": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string",
            "example": "User successfully logged out"
          }
        }
      },
      "User": {
        "type": "object",
        "required": [
          "email",
          "name",
          "password"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 10
          },
          "phone": {
            "type": "string",
            "example": 89892341289
          },
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "name": {
            "type": "string",
            "example": "John"
          },
          "password": {
            "type": "string",
            "example": 12345
          }
        }
      },
      "RegistrationData": {
        "type": "object",
        "required": [
          "email",
          "name",
          "password"
        ],
        "properties": {
          "phone": {
            "type": "string",
            "example": 89892341289
          },
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "name": {
            "type": "string",
            "example": "John"
          },
          "password": {
            "type": "string",
            "example": 12345
          }
        }
      },
      "Restaurant": {
        "required": [
          "name",
          "imgUrl"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 10
          },
          "name": {
            "type": "string",
            "example": "BRO&N"
          },
          "imgUrl": {
            "type": "string",
            "example": "http://localhost:9000/restaurants/img/rest1.jpg"
          },
          "description": {
            "type": "string",
            "example": "Ресторан классической итальянской кухни"
          }
        }
      }
    }
  }
}